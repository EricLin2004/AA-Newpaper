<h1> <%= @paper.title %> </h1>

<h2> Editor: <%= @paper.editor %> </h2>

<h3> Plans: </h3>
<ol>
	<% SubscriptionPlan.where(:newspaper_id => @paper.id).each do |sub| %>
		<li>
			$<%= sprintf("%.2f", sub.price) %> 
		<% if sub.daily  %>
			<%= "per day!" %>
		<% else %>
			<%= "per week!" %>
		<% end %>
		<%= link_to "Subscribe now!", edit_subscription_plan_user_url(sub) %>
		</li>
	<% end %>
</ol> 
<%= link_to "Add New Subscription Plan", new_newspaper_subscription_plan_url(@paper) %>